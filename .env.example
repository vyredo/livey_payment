# Database
# For local development (PostgreSQL via Docker):
DATABASE_URL="postgresql://livey:livey_password@localhost:5432/livey_payment"
# For SQLite (alternative for local development):
# DATABASE_URL="file:./prisma/dev.db"

# Stripe (server-side)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_test_webhook_secret_placeholder

# Stripe (frontend via Vite)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Application
# EMAIL_FRONTEND_URL is used for payment links in emails (must be publicly accessible)
# Set this to your production frontend domain (e.g., https://yourfrontend.com)
EMAIL_FRONTEND_URL=http://localhost:5173
# APP_URL is kept for backwards compatibility
APP_URL=http://localhost:5173
PORT=3001
NODE_ENV=development

# Email Configuration (Optional - for sending payment links)
# If not configured, payment links will only be logged to console
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM="Livestream ERP <your-email@gmail.com>"